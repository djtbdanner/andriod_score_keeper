            android:layout_width="@dimen/size_color_box"
            android:layout_height="@dimen/size_color_box"
            android:layout_margin="@dimen/buffer_margin_color_box"
            android:background="@color/black"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
            android:layout_toLeftOf="@+id/brown_picker_left"
            android:layout_above="@+id/purple_picker_left" />

        <View
            android:id="@+id/brown_picker_left"
            android:layout_width="@dimen/size_color_box"
            android:layout_height="@dimen/size_color_box"
            android:layout_margin="@dimen/buffer_margin_color_box"
            android:background="@color/brown"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
