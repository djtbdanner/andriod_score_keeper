<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="codepath.apps.demointroandroid.ColorActivity">

    <!--<ScrollView-->
    <!--android:id="@+id/login_form"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@color/DimGray">-->

    <RelativeLayout
        android:id="@+id/color_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/DimGray"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin">
        <!-- Text message at top -->

        <TextView
            android:id="@+id/text_msg_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:clickable="false"
            android:gravity="center"
            android:text="Select team color from each palette - see example below to each side."
            android:textColor="@color/black"
               />

        <!-- Horizontal and vertical dividers -->
        <!--Horizontal-->
        <View
            android:id="@+id/horizontal_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_width"
            android:layout_centerInParent="true"
            android:background="@android:color/black"
            android:layout_margin="@dimen/buffer_margin_color_box" />

        <!--Vertical-->
        <View
            android:id="@+id/vertical_divider"
            android:layout_width="@dimen/divider_width"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@android:color/black"
            android:layout_margin="@dimen/buffer_margin_color_box"
            android:layout_above="@+id/colors_done_button"
            android:layout_below="@+id/text_msg_instructions" />

        <!--Left Primary -->


        <View
