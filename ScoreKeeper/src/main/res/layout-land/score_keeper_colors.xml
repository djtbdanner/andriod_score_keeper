            android:layout_above="@+id/white_picker_left" />

        <View
            android:id="@+id/orange_picker_left"
            android:layout_width="@dimen/size_color_box"
            android:layout_height="@dimen/size_color_box"
            android:layout_margin="@dimen/buffer_margin_color_box"
            android:layout_toLeftOf="@id/vertical_divider"
            android:background="@color/orange"
            android:clickable="true"
            android:hapticFeedbackEnabled="true"
            android:layout_above="@+id/yellow_picker_left" />

        <View
            android:id="@+id/pink_picker_left"
            android:layout_width="@dimen/size_color_box"
            android:layout_height="@dimen/size_color_box"
